<resources>

    <style name="Widget" parent="@android:style/Widget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>
    
    <style name="Widget.ColorPicker">
        <item name="layout">@layout/color_picker_dialog</item>
        <item name="mode">circle_hs_v</item>
        <item name="color">#FFE1112B</item>
        <item name="enableAlpha">false</item>
    </style>
    
    <style name="Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    
	<style name="Widget.Button">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingLeft">12sp</item>
        <item name="android:paddingRight">12sp</item>
        <item name="android:paddingTop">14sp</item>
        <item name="android:paddingBottom">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    
	<style name="Widget.CheckBox" parent="@style/Widget.TextView"></style>
	
	<style name="Widget.SeekBar">
        <item name="android:paddingLeft">15.0dp</item>
        <item name="android:paddingRight">15.0dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5.0dp</item>
        <item name="android:layout_marginBottom">5.0dp</item>
        <item name="android:maxHeight">@dimen/seekbar_progress_height</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">@dimen/seekbar_progress_height</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:fadeScrollbars">true</item>
    </style>
	
	<style name="Widget.ImageWithTextBelowIt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_gray</item>
<!--
		<item name="android:text">This text is below the image</item>
		<item name="android:drawableTop">@drawable/example</item>
-->
    </style>
    
	<style name="Widget.CheckBox" parent="@style/Widget.TextView">
	
	</style>
	
	<style name="Widget.Spinner">
		<item name="android:layout_width">wrap_content</item>
	   	<item name="android:layout_height">wrap_content</item>
	    	<item name="android:spinnerMode">dropdown</item>
	    	<item name="android:textSize">@dimen/text_size_normal</item>
	    	<item name="android:dropDownVerticalOffset">0dp</item>
	    	<item name="android:paddingLeft">10dp</item>
        	<item name="android:paddingRight">10dp</item>
	</style>
	
	<style name="TitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#d9f3ff</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
    
	<style name="Widget.Button.MainActivity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_weight">0.5</item>
    </style>
</resources>
